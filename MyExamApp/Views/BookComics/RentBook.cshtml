@model RentalViewModel

<h2>Rent a Comic Book</h2>

<form asp-action="RentBook" method="post">
    <div class="form-group">
        <label for="CustomerId">Customer</label>
        <select class="form-control" name="CustomerId">
            @foreach (var customer in ViewBag.Customers)
            {
                <option value="@customer.Id">@customer.Fullname</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="ComicBookId">Comic Book</label>
        <select class="form-control" name="ComicBookId">
            @foreach (var book in ViewBag.ComicBooks)
            {
                <option value="@book.Id">@book.BookName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="RentalDate">Rental Date</label>
        <input type="date" class="form-control" name="RentalDate" />
    </div>

    <div class="form-group">
        <label for="ReturnDate">Return Date</label>
        <input type="date" class="form-control" name="ReturnDate" />
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input type="number" class="form-control" name="Quantity" />
    </div>

    <div class="form-group">
        <label for="PricePerDay">Price Per Day</label>
        <input type="number" class="form-control" name="PricePerDay" />
    </div>

    <button type="submit" class="btn btn-primary">Rent Book</button>
</form>
